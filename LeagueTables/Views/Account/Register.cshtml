@model LeagueTables.Models.Account.RegisterModel;

@{
    ViewData["Title"] = "Register";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <form asp-action="Register" asp-route-returnUrl="@ViewBag.ReturnUrl">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-floating">
                    <input asp-for="@Model.Email" class="form-control" autocomplete="email" aria-required="true" />
                    <label asp-for="@Model.Email" class="form-label"></label>
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <input asp-for="@Model.Password" class="form-control" aria-required="true" />
                    <label asp-for="@Model.Password" class="form-label"></label>
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <input asp-for="@Model.ConfirmPassword" class="form-control" aria-required="true" />
                    <label asp-for="@Model.ConfirmPassword" class="form-label"></label>
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="text-danger">
                    @Html.ValidationMessage("RegisterError")
                </div>

                <div class="btn-group" role="group">
                    <button type="submit" class="btn btn-primary">Register</button>
                    <a asp-action="Login" asp-route-returnUrl="@ViewBag.ReturnUrl" class="btn btn-primary">Login</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}