@using LeagueTables.Controllers
@model LeagueTables.Models.Account.LoginModel;

@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <form asp-action="Login" asp-route-returnUrl="@ViewBag.ReturnUrl">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-floating">
                    <input asp-for="@Model.Email" class="form-control" autocomplete="email" aria-required="true" />
                    <label asp-for="@Model.Email" class="form-label"></label>
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <input asp-for="@Model.Password" class="form-control" autocomplete="password" aria-required="true" />
                    <label asp-for="@Model.Password" class="form-label"></label>
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>

                <div class="checkbox">
                    <label asp-for="@Model.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="@Model.RememberMe" />
                        <label asp-for="@Model.RememberMe" class="form-label"></label>
                    </label>
                </div>

                <div class="text-danger">
                    @Html.ValidationMessage(AccountController.LoginErrorName)
                </div>

                <div class="btn-group" role="group">
                    <button type="submit" class="btn btn-primary">Login</button>
                    <a asp-action="Register" asp-route-returnUrl="@ViewBag.ReturnUrl" class="btn btn-primary">Register</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}